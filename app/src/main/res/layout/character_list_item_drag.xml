<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:id="@+id/characterImageView"
        android:src="@drawable/eragoncover"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_reorder_white_24dp"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/characterImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/characterNameTextView"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Character Name"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/characterImageView"
            android:layout_toEndOf="@+id/characterImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/descriptionTextView"
            android:textStyle="italic"
            android:layout_below="@+id/characterNameTextView"
            android:layout_toRightOf="@+id/characterImageView"
            android:layout_toEndOf="@+id/characterImageView" />


</RelativeLayout>